<% if user_signed_in? %>

<table class='table'>
  <tr>
    <th>ユーザー情報</th>
  </tr>
  <tr>
    <th>
  	  <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:'160x150', class: 'rounded-circle' %>
      <% end %>
    </th>
  </tr>
  <tr>
	  <th><%= user.name %>@<%= user.our_answers_id %></th>
  </tr>
  <tr>
	  <th style="white-space: pre-line;">プロフィール
	  <!--style="white-space: pre-line;"　←長文が縦長にならないように記述。ターミナル上での改行がviewに反映されるので注意-->
	  <% if user.introduction.present? %>
	    <%= user.introduction %></th>
	  <% else %>
	    プロフィール情報は未登録です
	  <% end %>
  </tr>


</table>

  <div id="button_<%= user.id %>" >
    <%= render 'public/relationships/button', user: user %>
  </div>

<% else %>

<table class='table'>
  <tr>
    <th>ユーザー情報</th>
  </tr>
  <tr>
    <td>ゲストユーザー様</td>
  </tr>
</table>

<% end %>