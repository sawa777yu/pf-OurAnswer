<div class="container_field">
  <div class="row ml-5">
    <div class="col-md-2">
      <%= render 'public/users/info', user: @user %>
    </div>
    <div class="col">
      <div class="row my-4">
        <div class="col-md-2 text-center">
          <h5 class="bg-light" >記事詳細</h5>
        </div>
          <td class="bookmark_form_<%= @post.id %>">
            <%= render 'public/bookmarks/bookmark_form', post: @post %>
          </td>
      </div>
      <div class="row offset-md-2 mb-2">
        <div class="col-md-2">
          参考記事URL
        </div>
        <div class="col">
          <%= @post.reference_url %>
        </div>
      </div>
      <div class="row offset-md-2 my-4">
        <div class="col-md-2">
          ジャンル
        </div>
        <div class="col">
          <%= @post.genre.name %>
        </div>
      </div>
      <div class="row offset-md-2 my-4">
        <div class="col-md-2">
          投稿タイトル
        </div>
        <div class="col">
          <%= @post.title %>
        </div>
      </div>
      <div class="row offset-md-2 mt-4 mb-2">
        <div class="col-md-2">
          投稿内容詳細
        </div>
      </div>
      <div class="row offset-md-2 mt-2 mb-4">
        <div class="col">
          <%= @post.body %>
        </div>
      </div>
      <div class="row offset-md-2 mb-2">
        <div class="col-md-3">
          参考記事への投稿者からの評価
        </div>
        <div class="col mb-4">
          <div class="post-rate" data-score="<%= @post.rate %>"></div>
        </div>
      </div>
      <div class="text-center">
        <%= link_to "投稿記事編集", edit_post_path, class: 'btn btn-primary btn-sm' %>
      </div>
      <div class="row offset-md-2 mt-4 mb-2">
        <div class="col-md-5">
          参考記事または本記事へのコメント・評価
        </div>
      </div>
      <div class="row offset-md-2 mt-2 mb-4">
        <div class="col">
          <%= render 'public/post_comments/comment', post: @post, post_comment: @post_comment %>
        </div>
      </div>
    </div>
  </div>
</div>



<script>
  $('.post-rate').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>