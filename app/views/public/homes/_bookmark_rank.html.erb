<div class='row'>
  <div class='col-md-6'>
    <h5 class="my-3">
      <i class="fas fa-crown"></i> 総合ブックマーク数ランキング
    </h5>
  </div>
</div>

<% post_ranks.each do |post| %>
  <table class="table">
    <tbody>
      <tr>

        <td>
          <%= l post.created_at %>
        </td>
        <td>
          <%= post.genre.name %>
        </td>
        <td class="text-truncate" style="max-width: 100px;">
          <%= link_to post.title, post_path(post.id) %>
        </td>
        <td>
          ブックマーク数：<%= post.bookmarks.count %>
        </td>

      </tr>
    </tbody>
  </table>
<% end %>
