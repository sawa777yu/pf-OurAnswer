<div class="row mt-4">
  <div class="col-md-6">
    <h5 class="my-4">
      <i class="fas fa-crown"></i> 総合ブックマーク数ランキング
    </h5>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-4 g-4">
  <% post_ranks.each.with_index(1) do |post, i| %>
    <div class="col">
      <div class="card mb-2" style="max-width: 400px; background: #DFDFDF;">

      <div class="card-body">
        <div class="card-item">
          <div class="row">

            <div class="col text-center">
              <p>第 <span style="font-size: 25px;"><%= i %></span> 位</p>
              <%= link_to user_path(post.user_id) do %>
                <%= attachment_image_tag post.user, :profile_image, fallback: "no_image.jpg", size: "100x100", class: 'rounded-circle' %>
              <% end %><br />
              <%= post.user.name %>@<%= post.user.our_answers_id %>
            </div>

            <div class="col">
              <p><%= link_to post.title.truncate(11), post_path(post.id) %></p>
              ジャンル：<%= post.genre.name %><br />
              ブックマーク数：<%= post.bookmarks.count %><br />
              <%= l post.created_at %>
            </div>

          </div>
        </div>
      </div>

      </div>
    </div>
  <% end %>
</div>