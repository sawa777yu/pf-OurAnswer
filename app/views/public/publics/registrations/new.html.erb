<div class='container'>
  <div class='row'>
    <div class='col-md-3 offset-md-1 mt-4'>
      <h4>新規ユーザー登録</h4>
  　</div>
  </div>
  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "public/publics/shared/error_messages", resource: resource %>

    <div class='row'>
      <div class="col-md-3 offset-md-1">
        <%= f.label :ニックネーム %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :name, class: 'form-control', placeholder: "ニックネーム", autofocus: true %>
      </div>
    </div><br />

    <div class='row'>
      <div class="col-md-3 offset-md-1">
        <%= f.label :ユーザーＩＤ %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :our_answers_id, class: 'form-control', placeholder: "ユーザーID", autofocus: true %>
      </div>
    </div><br />

    <div class='row'>
      <div class="col-md-3 offset-md-1">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-md-5">
        <%= f.email_field :email, class: 'form-control', placeholder: "our_answer@example.com", autofocus: true %>
      </div>
    </div><br />

    <div class='row'>
      <div class="col-md-3 offset-md-1">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= f.password_field :password, class: 'form-control', placeholder: "６桁以上", autocomplete: "new-password" %>
      </div>
    </div><br />

     <div class='row'>
      <div class="col-md-3 offset-md-1">
        <%= f.label :パスワード（確認用） %>
      </div>
      <div class="col-md-3">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "確認用", autocomplete: "new-password" %>
      </div>
    </div><br />

    <div class="row">
      <div class="col-md-3 offset-md-4">
        <%= f.submit "新規登録", class: 'btn btn-success btn' %>
      </div>
    </div><br />

  <% end %>

  <div class="row">
    <div class="col-md-3 offset-md-4">
      <h5>既に登録済みの方</h5>
    </div>
  </div>
   <div class="row">
    <div class="col-md-3 offset-md-4">
      <%= link_to 'こちら', new_user_session_path %>　からログインして下さい
    </div>
  </div>
</div>