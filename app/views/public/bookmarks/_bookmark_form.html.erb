<% if user_signed_in? %>

  <% if post.bookmarked_by?(current_user) %>
    <p>
      <span class="font-weight-bold">ブックマーク数：<%= post.bookmarks.count %></span>
      <span class="offset-md-1"><%= link_to "ブックマーク中",post_bookmarks_path(post), method: :delete, class: 'btn btn-outline-danger', remote: true %></span>
    </p>
  <% else %>
    <p>
      <span class="font-weight-bold">ブックマーク数：<%= post.bookmarks.count %></span>
      <span class="offset-md-1"><%= link_to "ブックマークする",post_bookmarks_path(post), method: :post, class: 'btn btn-primary', remote: true %></span>
    </p>
  <% end %>

<% end %>