<% if user_signed_in? %>

  <% if post.bookmarked_by?(current_user) %>
    <p>
      <%= link_to "ブックマーク中",post_bookmarks_path(post), method: :delete, class: 'btn btn-outline-danger btn-sm', remote: true %>
      ブックマーク数：<%= post.bookmarks.count %>
    </p>
    <% else %>
    <p>
      <%= link_to "ブックマークする",post_bookmarks_path(post), method: :post, class: 'btn btn-primary btn-sm', remote: true %>
      ブックマーク数：<%= post.bookmarks.count %>
    </p>
  <% end %>

<% end %>