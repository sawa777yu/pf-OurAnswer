<% if user_signed_in? %>

  <% if post.bookmarked_by?(current_user) %>
    <p>
      <span class="offset-md-1">
        <%= link_to post_bookmarks_path(post), method: :delete, class: 'btn btn-outline-danger', remote: true do %>
          ブックマーク中：<%= post.bookmarks.count %>
        <% end %>
      </span>
    </p>
  <% else %>
    <p>
      <span class="offset-md-1">
        <%= link_to post_bookmarks_path(post), method: :post, class: 'btn btn-primary', remote: true do %>
         ブックマーク！：<%= post.bookmarks.count %>
        <% end %>
      </span>
    </p>
  <% end %>

<% end %>