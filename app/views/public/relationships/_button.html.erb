<div class="container">

  <div class="row">
    <div class="col-md-12">
      フォロー数
      <%= link_to user_followings_path(user) do %>
      <%= user.follower_of_relationships.count %>
      <% end %>
    </div>

    <div class="col-md-12">
      フォロワー数
      <%= link_to user_followers_path(user) do %>
      <%= user.followed_of_relationships.count %>
      <% end %>
    </div>
  </div>

  <div class= 'row my-4'>
    <div class="col-md-12">
      <% if user.id == current_user.id %>
        <%= link_to '編集する',edit_user_path(user),class: "btn btn-success btn-block" %>
      <% elsif current_user.following?(user) %>
        <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-info", remote: true %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success", remote: true %>
      <% end %>
    </div>
  </div>

</div>