<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました<br/>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row my-4">
    <div class="col-md-8 my-4">
      <h5 class="bg-ligth" >
        <%= @user.name %>様のユーザー情報編集
      </h5>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "ユーザーID" %>
    </div>
    <div class="col">
      <%= @user.id %>
    </div>
  </div>
  <%= form_with model:[:admin, @user],method: :patch, local: true do |f| %>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "ニックネーム" %>
    </div>
    <div class="col">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "OurAnswers ID" %>
    </div>
    <div class="col">
      <%= f.text_field :our_answers_id %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "メールアドレス" %>
    </div>
    <div class="col">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "登録ステータス" %>
    </div>
    <div class="col">
      <%= f.radio_button :is_deleted,false %>
      <%= f.label :is_deleted, '有効', value: false %>
      <%= f.radio_button :is_deleted,true %>
      <%= f.label :is_deleted, '無効', value: true %>
    </div>
 </div>
    <div class="text-center">
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>
    <% end %>