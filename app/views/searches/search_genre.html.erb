 <h4>ジャンル "<%= @genre.name %>" での検索結果</h4>
 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>投稿日時</th>
      <th>タイトル</th>
      <th>参考記事url</th>
      <th>bookmark</th>
    </tr>
  </thead>
  <tbody>
    <% @genre_records.each do |record| %>
      <tr>
        <td><%= link_to user_path(record.user) do %>
          <%= attachment_image_tag(record.user, :profile_image, fallback: "no_image.jpg", size: "50x50") %>
          <% end %>
        </td>
        <td><%= l record.created_at %></td>
        <td class="text-truncate" style="max-width: 300px;">
          <%= link_to record.title, post_path(record.id), class: "post_#{record.id}" %>
        </td>
        <td class="text-truncate" style="max-width: 300px;">
          <%= Rinku.auto_link(record.reference_url, :all, 'target="_blank"').html_safe %>
        </td>
        <td><%= record.bookmarks.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>